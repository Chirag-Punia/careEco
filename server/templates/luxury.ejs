<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= businessName %> - Luxury E-commerce</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: '<%= colorTheme.primary %>',
              'primary-dark': '<%= colorTheme.primaryDark %>',
              secondary: '<%= colorTheme.secondary %>'
            },
            fontFamily: {
              serif: ['Playfair Display', 'serif'],
              sans: ['Montserrat', 'sans-serif']
            }
          }
        }
      }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <script src="https://js.stripe.com/v3/"></script>
</head>
<body class="font-sans bg-white">
    <!-- Luxury Header -->
    <header class="fixed w-full bg-white shadow-sm z-50">
        <div class="border-b border-primary/20">
            <div class="container mx-auto px-6 py-2">
                <div class="flex justify-end text-xs text-gray-500">
                    <span>FREE SHIPPING ON ORDERS OVER $200</span>
                </div>
            </div>
        </div>
        <nav class="container mx-auto px-6 py-6">
            <div class="flex items-center justify-between">
                <a href="#" class="font-serif text-3xl"><%= businessName %></a>
                <div class="hidden md:flex items-center space-x-12">
                    <a href="#home" class="text-gray-800 hover:text-primary transition-colors text-sm tracking-wider">Home</a>
                    <a href="#products" class="text-gray-800 hover:text-primary transition-colors text-sm tracking-wider">Collection</a>
                    <a href="#contact" class="text-gray-800 hover:text-primary transition-colors text-sm tracking-wider">Contact</a>
                    <button class="relative">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                        </svg>
                        <span id="cart-count" class="absolute -top-2 -right-2 w-4 h-4 text-xs flex items-center justify-center text-white bg-primary rounded-full">0</span>
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <!-- Luxury Hero -->
    <section id="home" class="relative h-screen">
        <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1441986300917-64674bd600d8')] bg-cover bg-center">
            <div class="absolute inset-0 bg-black/40"></div>
        </div>
        <div class="relative h-full flex items-center justify-center text-white text-center">
            <div class="px-6">
                <h1 class="font-serif text-7xl mb-6"><%= businessName %></h1>
                <p class="text-lg mb-8 max-w-2xl mx-auto"><%= description %></p>
                <a href="#products" class="inline-block bg-primary text-white px-12 py-4 text-sm tracking-wider hover:bg-primary-dark transition-colors">
                    Discover Collection
                </a>
            </div>
        </div>
    </section>

    <!-- Luxury Products -->
    <section id="products" class="py-24 bg-gray-50">
        <div class="container mx-auto px-6">
            <h2 class="font-serif text-4xl text-center mb-16">Curated Collection</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                <% products.forEach(function(product) { %>
                    <div class="group">
                        <div class="relative overflow-hidden mb-6">
                            <img src="<%= Object.values(product.imageUrl)[0] %>" alt="<%= product.name %>" class="w-full h-[500px] object-cover">
                            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors duration-300"></div>
                            <button onclick="addToCart('<%= product._id %>')" class="absolute bottom-6 left-6 right-6 bg-primary text-white py-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                Add to Cart
                            </button>
                        </div>
                        <h3 class="font-serif text-xl mb-2"><%= product.name %></h3>
                        <p class="text-primary font-medium">$<%= product.price %></p>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Luxury Contact -->
    <section id="contact" class="py-24">
        <div class="container mx-auto px-6">
            <div class="max-w-2xl mx-auto text-center">
                <h2 class="font-serif text-4xl mb-16">Contact Us</h2>
                <form id="contact-form" class="space-y-8">
                    <input type="text" placeholder="Your Name" required class="w-full px-6 py-4 bg-gray-50 border-0 focus:ring-1 focus:ring-primary">
                    <input type="email" placeholder="Your Email" required class="w-full px-6 py-4 bg-gray-50 border-0 focus:ring-1 focus:ring-primary">
                    <textarea placeholder="Your Message" required rows="4" class="w-full px-6 py-4 bg-gray-50 border-0 focus:ring-1 focus:ring-primary"></textarea>
                    <button type="submit" class="w-full bg-primary text-white py-4 hover:bg-primary-dark transition-colors">
                        Send Message
                    </button>
                </form>
            </div>
        </div>
    </section>

    <!-- Luxury Footer -->
    <footer class="bg-secondary text-white py-16">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
                <div>
                    <h3 class="font-serif text-2xl mb-6"><%= businessName %></h3>
                    <p class="text-gray-400"><%= description %></p>
                </div>
                <div>
                    <h4 class="font-serif text-lg mb-6">Quick Links</h4>
                    <ul class="space-y-4">
                        <li><a href="#home" class="text-gray-400 hover:text-primary transition-colors">Home</a></li>
                        <li><a href="#products" class="text-gray-400 hover:text-primary transition-colors">Collection</a></li>
                        <li><a href="#contact" class="text-gray-400 hover:text-primary transition-colors">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-serif text-lg mb-6">Contact</h4>
                    <ul class="space-y-4 text-gray-400">
                        <li>contact@<%= businessName.toLowerCase() %>.com</li>
                        <li>(555) 123-4567</li>
                        <li>123 Luxury Ave, City, State</li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-serif text-lg mb-6">Newsletter</h4>
                    <form class="space-y-4">
                        <input type="email" placeholder="Your email" class="w-full px-4 py-2 bg-white/10 border-0 focus:ring-1 focus:ring-primary text-white">
                        <button type="submit" class="w-full bg-primary text-white py-2 hover:bg-primary-dark transition-colors">
                            Subscribe
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </footer>

    <script src="script.js"></script>
</body>
</html>